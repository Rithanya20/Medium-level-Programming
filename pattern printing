#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    int n =t;
    int star=n/2 + 1;
    int light = star;
    int space = 0;
    while(star > 0){
    for(int i=0; i<star; i++){
        cout<<'*';
        
    }
    
    
    for(int i=0; i<space; i++){
        cout<<" ";
    }
    space+=2;
    for(int i=0; i<star; i++){
        cout<<'*';
        
    }
    cout<<endl;
    star--;
    }
    
    
    star = 2;
    space = space-(star+star);
    while(star <= light){
    for(int i=0; i<star; i++){
        cout<<'*';
    }
    for(int i=0; i<space; i++){
        cout<<" ";
    }
    space-=2;
    for(int i=0; i<star; i++){
        cout<<'*';
        
    }
    cout<<endl;
    star++;    
    }
    
    
    
   return 0;
}
